<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.0-1/css/all.min.css"
      type="text/css"
    />
    <link
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
      crossorigin="anonymous"
    />
    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
      integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
      crossorigin="anonymous"
    ></script>
    <script type="text/javascript" src="/scripts/baffle.min.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>

    <title>Home Page</title>
  </head>

  <body>
    <%-include("./partials/header") %>

    <div class="card-columns">
      <% for(const el of data) { %>
      <div class="card" height="500px">
        <header>
          <div>
            <img
              class="img-thumbnail"
              src="<%= el.owner_profile_pic %>"
              alt="User profile picture"
            />
            <p class="owner_name"><%= el.owner_name %></p>
          </div>
          <% if(el.owner_id === user.id) { %>
          <div>
            <a href="/api/resources/edit/<%= el.id %>"
              ><i class="far fa-edit"></i
            ></a>
            <form action="/api/resources/delete/<%= el.id %>" method="POST">
              <button type="submit">
                <i class="far fa-trash-alt"></i>
              </button>
            </form>
          </div>
          <% } %>
        </header>
        <div class="card-body">
          <content>
            <a href="<%= el.url %>" target="#blank">
              <h5 class="card-title"><%= el.title %></h5>
            </a>
            <p class="card-text"><%= el.description %></p>
          </content>
          <img
            class="img-thumbnail"
            src="<%= el.category_thumbnail %>"
            width="100px"
            height="100px"
            alt="Category image"
          />
        </div>
        <footer class="text-muted">
          <div id="<%= el.id %>" class="like-button far fa-heart">
            <%= el.number_of_likes %>
          </div>
          <i class="far fa-comment-dots"></i>
          <div>
            <i class="far fa-star"></i>
            <i class="fas fa-star"></i>
          </div>
        </footer>
      </div>

      <% } %>
    </div>

    <%-include("./partials/sidebar") %>

    <footer class="footer-faded"></footer>

    <script>
      window.baffle;
      // Select elements and start.
      let b = baffle(".owner_id", {
        characters: "abcdefghijklmnopqrstuvwxyz",
        speed: 750
      });
      b.reveal(1500, 1000);
    </script>
  </body>
</html>
