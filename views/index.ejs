<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.0-1/css/all.min.css"
      type="text/css"
    />
    <link
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
      crossorigin="anonymous"
    />
    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
      integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
      crossorigin="anonymous"
    ></script>
    <script
      type="text/javascript"
      src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.0.5/gsap.min.js"
    ></script>
    <script type="text/javascript" src="/scripts/app.js"></script>

    <title>NOTES - Home Page</title>
  </head>

  <body>
    <%-include("./partials/header") %>

    <div class="card-columns">
      <% for(const el of data) { %>
      <div class="card" height="500px">
        <header>
          <div>
            <img
              class="img-thumbnail"
              src="<%= el.owner_profile_pic %>"
              alt="User profile picture"
            />
            <p class="owner_name">Posted by: <%= el.owner_name %></p>
          </div>
          <% if(el.owner_id === user.id) { %>
          <div>
            <a href="/api/resources/edit/<%= el.id %>"
              ><i class="far fa-edit"></i
            ></a>
            <form action="/api/resources/delete/<%= el.id %>" method="POST">
              <button type="submit">
                <i class="far fa-trash-alt"></i>
              </button>
            </form>
          </div>
          <% } %>
        </header>
        <div class="card-body">
          <content>
            <a href="<%= el.url %>" target="#blank">
              <h5 class="card-title"><%= el.title %></h5>
            </a>
            <p class="card-text"><%= el.description %></p>
          </content>

          <img
            class="img-thumbnail"
            src="<%= el.category_thumbnail %>"
            width="100px"
            height="100px"
            alt="Category image"
          />
        </div>

        <footer class="text-muted">
          <div class="likes-section">
            <i id="<%= el.id %>" <% if(user.likes.includes(el.id)) {%>
              class="liked fas fa-heart" <% } else { %> class="not-liked fas
              fa-heart" <% } %>></i
            >
            <p><%= el.number_of_likes %></p>
          </div>
          <a href="/api/resources/<%= el.id %>"
            ><i class="far fa-comment-dots"></i
          ></a>
          <div>Avg. Rating: <%= el.average_rating %></div>

          <div class="rating">
            <input id="rating-5" type="radio" name="rating" value="5" /><label
              for="rating-5"
              ><i class="fas fa-star"></i
            ></label>
            <input id="rating-4" type="radio" name="rating" value="4" /><label
              for="rating-4"
              ><i class="fas fa-star"></i
            ></label>
            <input id="rating-3" type="radio" name="rating" value="3" /><label
              for="rating-3"
              ><i class="fas fa-star"></i
            ></label>
            <input id="rating-2" type="radio" name="rating" value="2" /><label
              for="rating-2"
              ><i class="fas fa-star"></i
            ></label>
            <input id="rating-1" type="radio" name="rating" value="1" /><label
              for="rating-1"
              ><i class="fas fa-star"></i
            ></label>
          </div>
        </footer>
      </div>

      <% } %>
    </div>

    <%-include("./partials/sidebar") %>

    <footer class="footer-faded"></footer>

    <script>
      const tl = gsap.timeline({ repeat: 0 });
      tl.staggerFromTo(
        ".card",
        1,
        { opacity: 0, scale: 0.85, y: 50 },
        { opacity: 1, scale: 1, y: 0 },
        0.05
      );
    </script>
  </body>
</html>
